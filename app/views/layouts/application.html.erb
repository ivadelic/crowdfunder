<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav id = "nav" >
	<ul>
		<li><%= link_to "All Projects", "/"%></li>
		<li><%= link_to "Create Project", "/projects/new" %></li>

		<li><%= link_to "Sign-up", "/users/new"  %></li>
		<% if current_user %> 
			<li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
			<li><%= link_to "Logout", :logout, method: :post %></li>
		<% else %> 
			<li><%= link_to "Login", :login %></li> 
		<% end %> 

	</ul>
</nav>
<div>
	<p id="notice"><%= flash[:notice]%></p>
	<p id="alert"><%= flash[:alert]%></p>
</div>

<%= yield %>

</body>
</html>
